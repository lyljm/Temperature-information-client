<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 引入属性文件 -->
<!--    <properties url="./jdbc.properties"/>-->
    <!-- 和spring整合后 environments配置将废除-->
    <environments default="development">
        <environment id="development">
            <!-- 使用jdbc事务管理,事务控制由mybatis管理-->
            <transactionManager type="JDBC" />
            <!-- 数据库连接池，配置数据源 -->
            <dataSource type="POOLED">
                <property name="driver" value="${driver}" />
                <property name="url" value="${url}" />
                <property name="username" value="${username}" />
                <property name="password" value="${password}" />
                <property name="poolPingQuery" value="SELECT GETDATE()" />
                <property name="poolPingEnabled" value="true" />
            </dataSource>
        </environment>
    </environments>
    <!-- 配置映射资源文件 -->
    <mappers>
<!--        <mapper class="org.com.RDcenter.mapper.ITempRecordMapper"/>-->
<!--        <mapper resource="org.com.RDcenter.mapper.ITempGunMapper.xml"/>-->
        <package name="org.com.RDcenter.mapper"/>
    </mappers>
</configuration>
